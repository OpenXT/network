# Starts network daemon

NAME=network-daemon
DAEMON=/usr/bin/$NAME
PIDFILE=/var/run/$NAME.pid
SCRIPTNAME=/etc/init.d/$NAME

# Exit if the package is not installed
[ -x "$DAEMON" ] || exit 0

do_start()
{
        echo "Starting network daemon"
        ARGO_CLIENT_PORT_ADDEND=10000 start-stop-daemon --start --quiet --oknodo --background --make-pidfile --pidfile $PIDFILE --exec $DAEMON -- +RTS -F1 -G1
}

do_stop()
{
        echo "Stopping network daemon"
	start-stop-daemon --stop --quiet --pidfile $PIDFILE
        while pidof -o %PPID $EXECUTABLE &>/dev/null ; do sleep 0.25 ; done
        echo "OK"
	rm -f $PIDFILE
}

#
# Function that sends a SIGHUP to the daemon/service
#
do_reload() {
        stop
        start
}

case "$1" in
  start)
	
	do_start
	;;
  stop)
	do_stop
	;;
  reload|restart)
	do_stop
        do_start
	;;
  *)
	echo "Usage: $SCRIPTNAME {start|stop|restart}" >&2
	exit 1 
	;;
esac

exit $?
